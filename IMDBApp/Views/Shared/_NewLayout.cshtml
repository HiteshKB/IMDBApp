<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Welcome : Movies Database - IMDB</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Include StyleSheets-->
    <link rel="stylesheet" href="~/Content/normalize.css">
    <link rel="stylesheet" href="~/Content/main.css">
    <!-- Include Jquery-->
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <!-- Modernizr-->
    <script src="~/Scripts/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body oncontextmenu="return false;">
    <div id="wrapper">
        <header id="main-header">
            <div class="container">
                <div id="branding">
                    <img src="~/Images/Logo.jpg" alt="IMDB" style="height:92px;">
                    <h1>Movie Database - IMDB</h1>
                </div><!--branding-->
            </div><!--container-->
        </header>
        <div class="container">
            <aside id="sidebar">
                <div class="search">
                    <input id="searchInput" type="search" placeholder="Search Summary..." onkeyup="searchFunc()" onblur="searchEnd()"><input type="image" src="~/Images/search.png" alt="Search">
                </div><!-- search -->
                <div class="clearfix"></div>
                <nav id="sub-nav">
                    <ul>
                        <li><a href="">Summary</a></li>
                        <li><a href="@Url.Action("Actors")">All Actors</a></li>
                        <li><a href="@Url.Action("Producers")">All Producers</a></li>
                        <li><a href="@Url.Action("CreateMovie")">Add Movie</a></li>
                    </ul>
                </nav>
                <div class="extImage">
                </div>
            </aside>
            <div id="popBckGrnd" class="popBckGrnd">
                <div class="popCntnt">
                    <img class="popClose" src="~/Images/closeBtn.png" />
                    <p class="popupMessage"></p>
                    <input type="button" class="yelbtn" id="popBtn" />
                </div>
            </div>
            <section id="content">
                @RenderSection("headerbox", required: false)

                @RenderSection("maincontent", required: false)
            </section>
            <div class="clearfix"></div>
        </div><!-- container-->
    </div><!-- wrapper-->
    <footer>
        <div>
            Copyright &copy; 2018-2019 <a href="http://www.bhardwajhiteshkumar01.com" style="color: yellow">Hitesh_Kumar</a>. All rights reserved.
            <div style="float:right;">Version 1.0</div>
        </div>
    </footer>
</body>
<script>    
    $(document).ready(function () {
        var currentPage = location.href;
        $("a.active").removeClass("active");
        var allA = document.getElementsByTagName('A');
        for (var i = 0, len = allA.length; i < len; i++) {
            if (allA[i].href == currentPage) {
                allA[i].className = "active";
            }
        }
        var index='@Url.Action("Index")';
        if (currentPage.substring(currentPage.lastIndexOf('/')) != index.substring(index.lastIndexOf('/'))) {
            document.getElementById('searchInput').disabled = true;
        }        
    });
    var modal = document.getElementById('popBckGrnd');
    var span = document.getElementsByClassName("popClose")[0];  
    span.onclick = function () {
        $('popBtn').hide();
        modal.style.display = "none";
    }
    window.onclick = function (event) {
        if (event.target == modal) {
            $('popBtn').hide();
            modal.style.display = "none";
        }
    }
</script>
</html>
